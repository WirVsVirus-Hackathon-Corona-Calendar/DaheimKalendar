<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/itim</item>
        <item name="fontFamily">@font/itim</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GraphicNovelHeadline">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GraphicNovelText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyDiaryHealine">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/headlineGrey</item>
    </style>

    <style name="MyChallengesSubHealine">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/headlineGrey</item>
    </style>

    <style name="PhotoDialogCongrats">
        <item name="android:textSize">43sp</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="PhotoDialogTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="PhotoDialogText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PhotoDialogButton">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="ProgressBarTint">
        <item name="colorAccent">@color/primaryYellow</item>
    </style>

</resources>
