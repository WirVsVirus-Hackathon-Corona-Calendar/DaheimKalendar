<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TodayChallengeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_today_chall_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:src="@drawable/unknown"
        android:backgroundTint="@color/black_overlay"
        android:backgroundTintMode="add"
        android:elevation="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:scaleType="centerCrop"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/graphic_novel_button_background"
        android:backgroundTint="#33333391"
        android:padding="20dp"
        android:text="@string/click_here"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_today_chall_bg"
        app:layout_constraintEnd_toEndOf="@+id/img_today_chall_bg"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

        <LinearLayout
            android:id="@+id/txt_today_challenge_headline_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@drawable/title_background"
            app:layout_constraintBottom_toTopOf="@+id/button_start"
            app:layout_constraintTop_toTopOf="@+id/img_today_chall_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintVertical_bias="0.3"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_today_challenge_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itim"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:text="@string/your_challenge_today"

                android:textColor="#DD000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_today_challenge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/itim"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:text="@string/your_challenge_today"
                android:textColor="#DD000000"
                android:textSize="30sp" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>