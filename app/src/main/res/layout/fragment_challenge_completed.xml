<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/completed_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="MEIN TAGEBUCH"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>
    <TextView
        android:id="@+id/completed_challenge_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Aufgabe 2: Wasserexperiment"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/completed_title_text_view">
    </TextView>
    <TextView
        android:id="@+id/completed_challenge_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Hier siehst du nochmal die Bilder von der Aufgabe"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/completed_challenge_title_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:lines="0">
    </TextView>
    <ImageView
        android:id="@+id/completed_challenge_image_view"
        android:layout_width="wrap_content"
        android:layout_height="276dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/completed_challenge_description_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>